<div class="home-banner">
  <h1>Wikinimous</h1>
</div>
<div class="container">
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-xs-12 col-md-8 offset-md-2 article">
        <div class="upvote">
          <i class="fas fa-sort-up"></i>
          <p>13</p>
        </div>
        <div class="picture"></div>
        <div class="info">
          <h2><%=  article.title %></h2>
          <p><%= article.content %></p>
        </div>
        <div class="share">
          <i class="fa fa-trash"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>






